---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	:root {
	  --primary-color: hsl(217, 90%, 55%);
	  --background-color: #23262d; /* Consider adjusting if you want to align it with the primary color theme */
	  --accent-gradient: linear-gradient(45deg, var(--primary-color), hsl(217, 90%, 65%));
	  --accent-light: 217, 90%, 75%; /* Lightened version of the primary color for hover state */
	}
	.link-card {
	  list-style: none;
	  display: flex;
	  padding: 1px;
	  background-color: var(--background-color);
	  border-radius: 7px;
	  background-position: 100%;
	  transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1), transform 0.5s ease-in-out, box-shadow 0.5s ease-in-out;
	  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	  transform: translateY(0);
	}
	.link-card > a {
	  width: 100%;
	  text-decoration: none;
	  line-height: 1.4;
	  padding: calc(1.5rem - 1px);
	  border-radius: 8px;
	  color: white;
	  background-color: var(--background-color);
	  opacity: 0.8;
	}
	h2 {
	  margin: 0;
	  font-size: 1.25rem;
	  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
	  margin-top: 0.5rem;
	  margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
	  background-image: var(--accent-gradient);
	  background-position: 0;
	  transform: translateY(-4px);
	  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
	}
	.link-card:is(:hover, :focus-within) h2 {
	  color: hsl(var(--accent-light));
	}
  </style>
