---
interface Props {
	title: string;
	body: string;
    features: Array<string>;
    price: string;
}

const { title, body, features, price } = Astro.props;
---

<div class="max-w-sm mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
        <h3 class="text-lg font-semibold text-primary mb-4">{title}</h3>
        <p class="text-sm text-gray-600 mb-4">{body}</p>
        <ul class="text-sm text-gray-600 mb-4">
            {features.map((feature) => (
                <li>- {feature}</li>
            ))}
        </ul>
        <div class="text-lg font-bold">{price}</div>
        <a href="/faq" class="mt-4 bg-primary text-white rounded-lg px-4 py-2 inline-block text-center">Choose Plan</a>
    </div>
</div>